<h1>Listing songs</h1>

<%= will_paginate @songs %>

<%= render 'search' %>

<table>
  <tr>
    <%# debugger %>
    <th><%= link_to_unless_current("Name", songs_path(params.merge(:sort => 'name', :order => 'asc'))) do %>
    <%= link_to "Name", songs_path(params.merge(:sort => 'name', :order => 'desc')) %>
    <% end %>
  </th>  
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% @songs.each do |song| %>
  <tr>
    <td><%= song.name %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% content_for :submenu do %>
  <%= link_to 'New Song', new_song_path %>
<% end %>
