<%= form_tag songs_path, :method => :get do %>
  <%= label_tag :search %>
  <%= text_field_tag :search %>
  <%= submit_tag "Submit" %>
<% end %>

<p>
  Starting with:
<% ('a'..'z').each do |letter| %>
  <%= link_to letter, songs_path(params.except(:controller, :action).merge(:search => letter)) %>
<%end %> <%= link_to "all", songs_path(params.except(:controller, :action, :search)) %>
</p>